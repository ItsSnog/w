.portfolio
  background-color #f6f7f9
  padding-bottom 100px
  .caption
    h1
      color #2a3044
      font-family Muller
      font-weight 100
      margin 50px 0
      font-size 26pt
  .portfolio_items
    display flex
    flex-wrap wrap
    justify-content center
    .portfolio_item
      @media screen and (max-width: 993px)
        width 300px
      margin 10px;
      position relative
      width 450px
      overflow hidden
      padding 0
      &:hover 
        .descr
          opacity 1
          top 0 
          border-radius 0
        img
          -webkit-filter blur(5px)
          -moz-filter blur(5px)
          -o-filter blur(5px)
          filter blur(5px)
          transform scale(1.1)
      img
        transition 1s
        width 100%
        height 100%
      .descr
        position absolute
        z-index 999
        left 0
        top 370px
        width 100%
        height 100%
        background-color rgba(255,255,255,.7)
        transition 1s
        text-align center
        padding-top 35%
        span
          a
            color black
            &:hover
              text-decoration none
